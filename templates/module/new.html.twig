{% extends 'base.html.twig' %}

{% block title %}Ajouter un module{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4">Ajouter un module</h2>
    {{ form_start(formAddModule, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
    
    <div class="mb-3">
        {{ form_label(formAddModule.nom, 'Nom du module', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(formAddModule.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(formAddModule.nom) }}
    </div>
    
    <div class="mb-3">
        {{ form_label(formAddModule.categorie, 'Cat√©gorie', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(formAddModule.categorie, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(formAddModule.categorie) }}
    </div>

    <div class="mb-3">
        {{ form_widget(formAddModule.valider, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

    {{ form_end(formAddModule) }}
</div>
{% endblock %}
