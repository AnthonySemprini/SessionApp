{% extends 'base.html.twig' %}

{% block title %}Module de la catégorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Modules</h1>
    <div class="row">
        {% for module in categorie.modules %}
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ module.nom }}</h5>
                    <p class="card-text">Description ou informations supplémentaires sur le module si disponibles.</p>
                    <a href="#" class="btn btn-primary">Voir plus</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
